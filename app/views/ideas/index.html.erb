<div class="page-header">
  <h1>Ideas</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Actions</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag idea.picture_url(:thumb) if idea.picture? %></td>
        <td><%= link_to 'Show', idea, :class => "btn btn-mini" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Spark Idea', new_idea_path, :class => "btn btn-primary" %>
